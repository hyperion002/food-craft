<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainViewModel"
            type="com.example.foodcraft.viewmodels.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.recipes.RecipesFragment">

        <com.todkars.shimmer.ShimmerRecyclerView
            android:id="@+id/shimmer_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            tools:itemCount="7"
            app:shimmer_recycler_item_count="7"
            app:shimmer_recycler_layout="@layout/recipes_placeholder"
            tools:listitem="@layout/recipes_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_restaurant" />

        <ImageView
            android:id="@+id/imageview_error"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:alpha="0.5"
            readApiResponseForImage="@{mainViewModel.recipesResponse}"
            readDatabaseForImage="@{mainViewModel.readRecipes}"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_sad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/textview_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="No Internet Connection"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            readApiResponseForText="@{mainViewModel.recipesResponse}"
            readDatabaseForText="@{mainViewModel.readRecipes}"
            app:layout_constraintEnd_toEndOf="@+id/imageview_error"
            app:layout_constraintStart_toStartOf="@+id/imageview_error"
            app:layout_constraintTop_toBottomOf="@+id/imageview_error" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>